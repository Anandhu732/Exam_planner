{
  "name": "exam-planner",
  "version": "2.0.0",
  "type": "module",
  "description": "Modern exam planning application with calendar, timetable, and focus timer",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "tesseract.js": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
